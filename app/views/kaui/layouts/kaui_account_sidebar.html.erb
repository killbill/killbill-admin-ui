<% if params[:account_id].present? %>
  <div class="account-sidebar-area">
    <div class="container">
      <p><%= pretty_account_identifier %></p>

      <% menu_items = [
        { label: 'Account', path: kaui_engine.account_path(params[:account_id]), controller_suffix: 'accounts', icon_path: 'kaui/sidebar/account.svg' },
        { label: 'Subscriptions', path: kaui_engine.account_bundles_path(params[:account_id]), controller_suffix: 'bundles', icon_path: 'kaui/sidebar/subscriptions.svg' },
        { label: 'Invoices', path: kaui_engine.account_invoices_path(params[:account_id]), controller_suffix: 'invoices', icon_path: 'kaui/sidebar/invoices.svg' },
        { label: 'Payments', path: kaui_engine.account_payments_path(params[:account_id]), controller_suffix: 'payments', icon_path: 'kaui/sidebar/payments.svg' },
        { label: 'Timeline', path: kaui_engine.account_timeline_path(params[:account_id]), controller_suffix: 'timelines', icon_path: 'kaui/sidebar/timeline.svg' },
        { label: 'Tags', path: kaui_engine.account_tags_path(params[:account_id]), controller_suffix: 'tags', icon_path: 'kaui/sidebar/tags.svg' },
        { label: 'Custom Fields', path: kaui_engine.account_custom_fields_path(params[:account_id]), controller_suffix: 'custom_fields', icon_path: 'kaui/sidebar/custom-fields.svg' }
      ] %>

      <% if current_user.root? %>
        <% menu_items += [
          { label: 'Queues', path: kaui_engine.account_queues_path(params[:account_id]), controller_suffix: 'queues', icon_path: 'kaui/sidebar/queues.svg' },
          { label: 'Audit', path: kaui_engine.account_audit_logs_path(params[:account_id]), controller_suffix: 'logs', icon_path: 'kaui/sidebar/audit.svg' }
        ] %>
      <% end %>

      <% menu_items.each do |item| %>
        <% css_class = params[:controller].ends_with?(item[:controller_suffix]) ? 'current' : 'non-current' %>
        <%= link_to item[:path], class: css_class do %>
          <span class="icon">
            <%= image_tag(item[:icon_path], size: "20x20") %>
          </span>
          <%= item[:label] %>
        <% end %>
      <% end %>

      <% if account_closed? %>
        <span class="label label-danger">CLOSED</span>
      <% end %>
    </div>
  </div>
<% end %>
