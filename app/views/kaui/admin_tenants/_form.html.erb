<%= form_for @tenant, :url => admin_tenants_path, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group d-flex pb-3">
    <%= f.label :name, 'Name', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group d-flex pb-3">
    <%= f.label :api_key, 'API Key', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :api_key, :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group d-flex pb-3">
    <%= f.label :api_secret, 'API Secret', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :api_secret, :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group d-flex justify-content-end pt-3 border-top">
    <%= render "kaui/components/button/button", {
      label: 'Close',
      variant: "outline-secondary d-inline-flex align-items-center gap-1",
      type: "button",
      html_class: "kaui-button custom-hover mx-2",
      html_options: {
        onclick: "window.history.back();"
      }
    } %>
    <%= render "kaui/components/button/button", {
      label: 'Save Tenant',
      variant: "outline-secondary d-inline-flex align-items-center gap-1",
      type: "submit",
      html_class: "kaui-dropdown custom-hover"
    } %>
  </div>
<% end %>
