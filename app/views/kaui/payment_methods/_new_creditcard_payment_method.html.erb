<div class="form-group d-flex border-bottom mb-3">
  <%= label_tag :card_type, 'Card details', :class => 'col-sm-3 control-label' %>
  <div class="form-group pb-3 col-sm-9">
    <div class="d-flex mb-3">
      <div class="form-group col-sm-9">
        <%= label_tag :card_holder_name, 'Cardholder Name', :class => 'control-label' %>
        <div>
          <%= text_field_tag :card_holder_name, @card_holder_name ||= nil, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group col-sm-3">
        <%= label_tag :expiration_month, 'Expiry Date', :class => 'control-label' %>
        <div class="d-flex expiry-date">
          <div class="col-sm-4">
            <%= text_field_tag :expiration_month, @expiration_month ||= nil, class: 'form-control', maxlength: 2 %>
          </div>
          <div class="col-sm-1 form-control">/</div>
          <div class="col-sm-7">
            <%= text_field_tag :expiration_year, @expiration_year ||= nil, :class => 'form-control', maxlength: 4 %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <%= label_tag :credit_card_number, 'Card number', :class => 'control-label' %>
      <div>
        <%= text_field_tag :credit_card_number, @credit_card_number ||= nil, :class => 'form-control' %>
      </div>
    </div>
  </div>
</div>
<div class="form-group d-flex pb-3">
  <%= label_tag :address1, 'Address 1', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :address1, @address1 ||= nil, :class => 'form-control' %>
  </div>
</div>
<div class="form-group d-flex pb-3">
  <%= label_tag :address2, 'Address 2', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :address2, @address2 ||= nil, :class => 'form-control' %>
  </div>
</div>
<div class="form-group d-flex pb-3">
  <%= label_tag :city, 'City', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :city, @city ||= nil, :class => 'form-control' %>
  </div>
</div>
<div class="form-group d-flex pb-3">
  <%= label_tag :postal_code, 'ZIP code', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :postal_code, @postal_code ||= nil, :class => 'form-control' %>
  </div>
</div>
<div class="form-group d-flex pb-3">
  <%= label_tag :state, 'State', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :state, @state ||= nil, :class => 'form-control' %>
  </div>
</div>
<div class="form-group d-flex pb-3 border-bottom mb-3">
  <%= label_tag :country, 'Country', :class => 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= text_field_tag :country, @country ||= nil, :class => 'form-control' %>
  </div>
</div>



<style>
  .control-label {
    font-size: 0.875rem !important;
    font-weight: 500 !important;
    line-height: 1.25rem !important;
    color: #414651 !important;
  }

  .question-circle {
    color: #A4A7AE;
    font-size: 1rem;
    width: 1rem;
    height: 1rem;
    display: inline-block;
    line-height: 1rem;
    text-align: center;
  }

  .col-sm-9.position-relative a {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
  }

  .form-group.d-flex.border-bottom .form-control,
  .form-group.d-flex.pb-3 .form-control {
    height: 2.5rem;
    border-radius: 0.375rem;
  }

  .form-group.d-flex.border-bottom .expiry-date {
    margin-left: 0.5rem;
  }

  .form-group.d-flex .form-control:focus {
    outline: none;
    box-shadow: none;
  }

  .expiry-date div:first-child input {
    border-right: 0;
    border-radius: 0.375rem 0 0 0.375rem !important;
    padding-right: 0;
  }

  .expiry-date div:nth-child(2) {
    border-left: 0;
    border-right: 0;
    border-radius: 0 !important;
    padding-left: 0;
    padding-right: 0;
    width: fit-content;
    color: #A4A7AE;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.75rem;
  }

  .expiry-date div:last-child input {
    border-left: 0;
    padding-left: 0.25rem;
    border-radius: 0 0.375rem 0.375rem 0 !important;
  }

  .expiry-date:focus-within div:nth-child(2),
  .expiry-date:focus-within input {
    border-color: #1570ef;
  }

  .checkbox label {
    font-weight: 500;
    font-size: 0.875rem;
    line-height: 1.25rem;
    color: #414651;
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

</style>