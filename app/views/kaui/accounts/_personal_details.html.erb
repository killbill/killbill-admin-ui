<div class="personal-details">

  <div class="personal-details-header">
    <h2>Personal Information</h2>
  </div>

  <div class="row">

    <div class="col-md-4">
      <div class="info-item">
        <b>Name</b>
        <p><%= @account.name %></p>
      </div>
      <div class="info-item">
        <b>Address1</b>
        <p><%= @account.address1 %></p>
      </div>
      <div class="info-item">
        <b>Address2</b>
        <p><%= @account.address2 %></p>
      </div>
      <div class="info-item">
        <b>City</b>
        <p><%= @account.city %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="info-item">
        <b>State</b>
        <p><%= @account.state %></p>
      </div>
      <div class="info-item">
        <b>Country</b>
        <p><%= @account.country %></p>
      </div>
      <div class="info-item">
        <b>Postal Code</b>
        <p><%= @account.postal_code %></p>
      </div>
      <div class="info-item">
        <b>Phone</b>
        <p><%= @account.phone %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="info-item">
        <b>Company</b>
        <p><%= @account.company %></p>
      </div>
      <div class="info-item">
        <b>Primary email</b>
        <p><%= @account.email %></p>
      </div>
      <div class="info-item contact_email_tags">
        <b>Contact emails</b>
        <div class="email-tags">
          <%= render :partial => 'kaui/account_emails/account_emails_table',
                             :locals => {:account_emails => @account_emails} %>
        </div>
      </div>
    </div>

  </div>

</div>

<style>
  .personal-details {
    margin-top: 3rem;
  }

  .personal-details-header h2 {
    font-weight: 600;
    font-size: 1.125rem;
    color: #414651;
    text-align: left;
    margin-bottom: 1.25rem;
    border-bottom: 0.0625rem solid #E9EAEB;
    padding-bottom: 0.5rem;
  }

  .personal-details .info-item {
    margin-bottom: 1rem;
  }

  .personal-details .info-item b {
    color: #414651 !important;
    font-weight: 600;
    font-size: 0.875rem !important;
    line-height: 1.25rem;
    text-align: left;
  }

  .personal-details .info-item p {
    color: #717680 !important;
    font-weight: 500;
    font-size: 0.875rem !important;
    line-height: 1.25rem;
    text-align: left;
    margin: 0;
  }

  .personal-details .email-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.25rem;
  }

  .personal-details .email-chip {
    background-color: #f1f3f5;
    border-radius: 1rem;
    padding: 0.25rem 0.625rem;
    font-size: 0.8125rem;
    color: #333;
    display: inline-flex;
    align-items: center;
  }

  .personal-details .email-chip .remove {
    margin-left: 0.5rem;
    cursor: pointer;
    color: #888;
  }

  .personal-details .add-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: #175CD3;
    text-decoration: none;
  }

  .personal-details .contact_email_tags div.email-tags {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .personal-details .contact_email_tags div.email-tags div {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .personal-details .contact_email_tags div.email-tags div div {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    border-radius: 0.25rem;
    gap: 0.25rem;
    border: 0.0625rem solid #E9EAEB;
    background-color: #FAFAFA;
    padding: 0.125rem 0.5rem;
    font-size: 0.875rem;
    color: #414651;
    line-height: 1.25rem;
  }
</style>
