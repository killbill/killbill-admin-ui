<div class="personal-details">

  <div class="personal-details-header">
    <h2>Personal Information</h2>
  </div>

  <div class="row">

    <div class="col-md-4">
      <div class="info-item">
        <b>Name</b>
        <p><%= @account.name %></p>
      </div>
      <div class="info-item">
        <b>Address1</b>
        <p><%= @account.address1 %></p>
      </div>
      <div class="info-item">
        <b>Address2</b>
        <p><%= @account.address2 %></p>
      </div>
      <div class="info-item">
        <b>City</b>
        <p><%= @account.city %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="info-item">
        <b>State</b>
        <p><%= @account.state %></p>
      </div>
      <div class="info-item">
        <b>Country</b>
        <p><%= @account.country %></p>
      </div>
      <div class="info-item">
        <b>Postal Code</b>
        <p><%= @account.postal_code %></p>
      </div>
      <div class="info-item">
        <b>Phone</b>
        <p><%= @account.phone %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="info-item">
        <b>Company</b>
        <p><%= @account.company %></p>
      </div>
      <div class="info-item">
        <b>Primary email</b>
        <p><%= @account.email %></p>
      </div>
      <div class="info-item contact_email_tags">
        <b>Contact emails</b>
        <div class="email-tags">
          <%= render :partial => 'kaui/account_emails/account_emails_table',
                             :locals => {:account_emails => @account_emails} %>
        </div>
      </div>
    </div>

  </div>

</div>

<style>
  .personal-details {
    margin-top: 48px;
  }

  .personal-details-header h2 {
    font-weight: 600;
    font-size: 18px;
    color: #414651;
    text-align: left;
    margin-bottom: 20px;
    border-bottom: 1px solid #E9EAEB;
    padding-bottom: 8px;
  }

  .personal-details .info-item {
    margin-bottom: 16px;
  }

  .personal-details .info-item b {
    color: #414651 !important;
    font-weight: 600;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
  }

  .personal-details .info-item p {
    color: #717680 !important;
    font-weight: 500;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
    margin: 0;
  }

  .personal-details .email-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
  }

  .personal-details .email-chip {
    background-color: #f1f3f5;
    border-radius: 16px;
    padding: 4px 10px;
    font-size: 13px;
    color: #333;
    display: inline-flex;
    align-items: center;
  }

  .personal-details .email-chip .remove {
    margin-left: 8px;
    cursor: pointer;
    color: #888;
  }

  .personal-details .add-link {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 14px;
    color: #175CD3;
    text-decoration: none;
  }

  .personal-details .contact_email_tags div.email-tags {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .personal-details .contact_email_tags div.email-tags div {
    display: flex;
    gap: 4px;
    flex-wrap: wrap;
  }

  .personal-details .contact_email_tags div.email-tags div div {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    border-radius: 4px;
    gap: 4px;
    border: 1px solid #E9EAEB;
    background-color: #FAFAFA;
    padding: 2px 8px;
    font-size: 14px;
    color: #414651;
    line-height: 20px;
  }

  <%
=begin%>
 .personal-details .contact_email_tags a:nth-of-type(2) {
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    border-left: none;
    margin-left: -5px;
    color: #A4A7AE;
    cursor: pointer;
  }

  .personal-details .contact_email_tags div div {
    color: #000;
  } 
<%
=end%>
</style>
