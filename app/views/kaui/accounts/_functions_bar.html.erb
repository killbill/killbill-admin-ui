    background-color: #FAFAFA;
    border-radius: 4px;
    cursor: pointer !important;
  }

  .dropdown-menu.ui-sortable {
    scrollbar-width: thin;
    scrollbar-color: #ccc transparent;
    border-radius: 6px;
    border: 1px solid #00000014 !important;
    margin: 10px 0 0;
    min-width: 210px;
  }

