  .payment-methods .payment-methods-header h2 {
    font-weight: 600;
    font-size: 1.125rem;
    line-height: 1.75rem;
    color: #414651;
    margin-bottom: 1.25rem;
  }

  .payment-methods .payment-methods-header a {
    padding: 0;
  }

