    border: none !important;
    margin-top: 1.25rem;
    border-bottom: 0.0625rem solid #E9EAEB !important;
  }

  .payment-methods .info-wrapper .toggler {
    padding-left: 0;
    padding-right: 0;
    background: transparent;
  }

