<div class="payment-methods">

  <div class="d-flex flex-column">

    <div class="payment-methods-header">
      <h2>Payment Methods</h2>
      <span>
        <% if can? :create, Kaui::PaymentMethod %>
          <%= form_tag kaui_engine.refresh_payment_methods_path(params.to_h), :method => :post, :class => 'form-force-inline form-right' do %>
              <%= render "kaui/components/button/button", {
                    label: "Update",
                    icon: "kaui/account/refresh.svg",
                    variant: "outline-secondary d-inline-flex align-items-center gap-1",
                    type: "submit",
                    html_class: "kaui-button custom-hover",
                  } %>
          <%= link_to kaui_engine.new_payment_method_path(:account_id => @account.account_id) do %>
            <%= render "kaui/components/button/button", {
                  label: "Add Method",
                  icon: "kaui/plus.svg",
                  variant: "outline-secondary d-inline-flex align-items-center gap-1",
                  type: "button",
                  html_class: "kaui-dropdown custom-hover",
                } %>
          <% end %>
        <% end %>
        <% end %>
      </span>
    </div>


    <% unless @payment_methods.empty? %>
        <div class="info-wrapper">

          <%= render :partial => 'kaui/payment_methods/payment_methods_table', :locals => {:account => @account,
                                                                                           :payment_methods => @payment_methods,
                                                                                           :last_transaction_by_payment_method_id => @last_transaction_by_payment_method_id} %>
        </div>
    <% end %>

  </div>

</div>




<style>
  .payment-methods {
    margin-top: 48px;
  }

  .payment-methods .payment-methods-header {
    display: flex;
    align-items: start;
    justify-content: space-between;
    padding: 0;
    border-bottom: 1px solid #E9EAEB;
  }

  .payment-methods .payment-methods-header h2 {
    font-weight: 600;
    font-size: 18px;
    line-height: 28px;
    color: #414651;
    margin-bottom: 20px;
  }

  .payment-methods .payment-methods-header a {
    padding: 0;
  }

  .payment-methods .tag-bar button {
    margin-top: -5px;

  }

  .payment-methods .info-wrapper {
    border: none !important;
    margin-top: 20px;
    border-bottom: 1px solid #E9EAEB !important;
  }

  .payment-methods .info-wrapper .toggler {
    padding-left: 0;
    padding-right: 0;
    background: transparent;
  }
  
  .payment-methods .payment-method {
    border-bottom: 1px solid #e0e0e0;
    padding: 6px 0;
    font-family: sans-serif;
    position: relative;
  }

  .payment-methods .payment-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
    cursor: pointer;
  }

  .payment-methods .column {
    min-width: 160px;
    flex: 1;
  }

  .payment-methods .column strong {
    color: #414651 !important;
    font-weight: 600;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
    margin-bottom: 4px;
  }

  .payment-methods .column div {
    color: #717680 !important;
    font-weight: 500;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
  }

  .payment-methods .payment-method-id {
    display: inline-block;
    max-width: 240px;  
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    vertical-align: middle;
  }

  .payment-methods .copy-icon {
    margin-left: 8px;
    cursor: pointer;
    color: #888;
  }

  .payment-methods .delete-link {
    color: #D92D20;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0px;
    cursor: pointer;
    margin-right: 12px;
    text-decoration: none;
  }

  .payment-methods .actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .payment-methods .primary {
    color: #A4A7AE;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0px;

  }

  .payment-methods .make-primary {
    font-weight: 500;
    color: #535862;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0px;
    cursor: pointer;
    text-decoration: none;
  }

  /* Toggle for detail section */
  .payment-methods .payment-detail {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding-top 0.4s ease;
    padding-top: 0;
  }

  .payment-methods .toggle-checkbox:checked + .payment-summary + .payment-detail {
    max-height: 1000px;
    padding-top: 12px;
    border-top: 1px solid #E9EAEB;
    margin-top: 12px;
  }

  /* Dropdown styles */
  .payment-methods .action-menu-wrapper {
    position: relative;
    display: inline-block;
    margin-left: 8px;
  }

  .payment-methods .menu-trigger {
    cursor: pointer;
    padding: 4px;
    display: inline-block;
  }

  .payment-methods .menu-toggle:checked + .menu-trigger + .action-dropdown {
    display: block;
  }

  .payment-methods .action-dropdown {
    display: none;
    position: absolute;
    top: 28px;
    right: 0;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    min-width: 140px;
    z-index: 100;
    padding: 8px 0;
  }

  .payment-methods .action-dropdown ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .payment-methods .action-dropdown li {
    padding: 10px 16px;
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
  }

  .payment-methods .action-dropdown li:hover {
    background-color: #f5f5f5;
  }

  .payment-methods .action-dropdown a {
    text-decoration: none;
    color: #4a4a4a;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .payment-methods .action-dropdown i {
    font-size: 16px;
  }

  .payment-methods .menu-toggle:checked ~ .dropdown-overlay {
    display: block;
  }

  .payment-methods .dropdown-overlay {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 99;
    background: transparent;
    cursor: default;
  }

  .payment-methods .menu-toggle:checked + .menu-trigger + .dropdown-overlay + .action-dropdown {
    display: block;
  }

  .payment-methods .payment-method-details .detail-item {
    margin-bottom: 16px;
  }

  .payment-methods .payment-method-details .detail-item b {
    display: block;
    margin-bottom: 4px;
    color: #414651 !important;
    font-weight: 600;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
  }

  .payment-methods .payment-method-details .detail-item span {
    display: block;
    color: #717680 !important;
    font-weight: 400;
    font-size: 14px !important;
    line-height: 20px;
    text-align: left;
  }

  .payment-methods .dots-menu {
    padding: 0 !important;
    background-color: transparent !important;
    border: none !important;
    margin-left: 12px !important;
  }

</style>