<% variant ||= "btn-primary" %>
<% type ||= "button" %>
<% label ||= "Submit" %>
<% icon ||= nil %>
<% html_class ||= "" %>
<% html_options ||= {} %>

<% icon_html = icon.present? ? image_tag(icon, class: "me-1", size: "16x16") : "" %>

<%= tag.button raw("#{icon_html}#{label}"),
  type: type,
  class: "btn kaui-button custom-hover #{variant} #{html_class}",
  **html_options
%>
