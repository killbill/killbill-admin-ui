<div class="search">

  <div class="column-block">

    <h1>Kaui users
      <% if can? :create, Kaui::AdminTenant %>
          <%= link_to '&nbsp;<i class="fa fa-plus-square"></i>'.html_safe, new_admin_allowed_user_path %>
      <% end %></h1>

    <% unless @allowed_users.empty? %>
        <table id="allowed-users-table" class="table table-condensed table-striped dt-responsive">
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
          </tr>
          </thead>
          <tbody>
          <% @allowed_users.each do |u| %>
              <tr>
                <td><%= link_to u.kb_username, admin_allowed_user_path(u.id) %></td>
                <td><%= u.description %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>

  </div>

</div>

<%= javascript_tag do %>
  $(document).ready(function() {
      $('#allowed-users-table').dataTable({
      "dom": "t",
      "paging": false
    });
  });
<% end %>
